<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.ChiTietNguoiDungFragment"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="20dp"
    android:paddingBottom="20dp">

    <TextView
        android:text="HỒ SƠ NGƯỜI DÙNG"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:text="ID: "
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_width="95dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_idNguoiDung"
            android:text="null"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:text="Tên: "
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_width="95dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_tenNguoiDung"
            android:text="null"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:text="Hình ảnh: "
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_width="95dp"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/img_hinhUser"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:text="Tài khoản: "
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_width="95dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_taiKhoanNguoiDung"
            android:text="null"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:text="Mật khẩu: "
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_width="95dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_matKhauNguoiDung"
            android:text="null"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:text="Email: "
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_width="95dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_emailNguoiDung"
            android:text="null"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:text="Mã quyền: "
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/edt_maQuyenNguoiDung"
            android:text="null"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp">
        <Button
            android:text="Sửa"
            android:id="@+id/btn_sua"
            android:layout_width="160dp"
            android:layout_height="70dp"
            android:layout_marginRight="15dp"/>
        <Button
            android:id="@+id/btn_xoa"
            android:text="Xóa"
            android:layout_width="160dp"
            android:layout_height="70dp"
            android:layout_marginLeft="15dp"/>
    </LinearLayout>

</LinearLayout>