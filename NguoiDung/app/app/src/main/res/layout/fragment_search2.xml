<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.Search2Fragment"
    android:background="@color/black"
    android:orientation="vertical"
    >

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_fragment_chiTietMonAn"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#707070"
        android:titleTextColor="@color/white">
        <ImageButton
            android:id="@+id/fragment_ctSearch2_imgBtn_quayLaiSearch"
            android:src="@drawable/baseline_arrow_back_24"
            android:background="#707070"
            android:layout_width="60dp"
            android:layout_height="60dp"
            />
        <EditText
            android:id="@+id/edt_nhapTenMon"
            android:hint="Gõ vào tên món"
            android:textColorHint="@color/white"
            android:layout_width="240dp"
            android:layout_height="match_parent"
            />
        <Button
            android:id="@+id/btn_timKiem"
            android:text="Tìm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:text="Món ăn tìm được"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/txt_TH_KhongTimThay"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fgsearch2_recycler_view_DSMonTimKiem"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:paddingRight="15dp"/>

</LinearLayout>

